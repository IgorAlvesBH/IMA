@{
  ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
  <div class="col-md-8">
    <section id="loginForm">
      @using (Html.BeginForm())
      {@Html.AntiForgeryToken()       
        <div>
          @Html.Label("Digite o seu CPF: ") @Html.TextBox("CPF")
        </div>
        <div>
          @Html.Label("Digite o seu e-mail: ") @Html.TextBox("Email")
        </div>
          <input type="submit" value="Entrar" />
      }
    </section>
  </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}